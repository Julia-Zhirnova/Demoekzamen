<Application x:Class="Uchet_Zayavok.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Uchet_Zayavok"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Width" Value="120"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Background" Value="#FF498C51"></Setter>
            <Setter Property="Foreground" Value="#FFFFF8F8"></Setter> 
            <Setter Property="FontFamily" Value="Tw Cen MT"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Tw Cen MT"></Setter>
        </Style>
    </Application.Resources>
</Application>
