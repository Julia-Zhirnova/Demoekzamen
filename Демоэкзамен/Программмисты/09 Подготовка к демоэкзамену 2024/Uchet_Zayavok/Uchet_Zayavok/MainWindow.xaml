<Window x:Class="Uchet_Zayavok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uchet_Zayavok"
        mc:Ignorable="d"
        Title="Учет заявок  на ремонт оборудования" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Background="#FF76E383"/>
        <Grid Grid.Row="2" Background="#FF76E383"/>
        <Image Source="/Images/service_logo.png" HorizontalAlignment="Left" Margin="5"/>
        <TextBlock Text="Учет заявок  на ремонт оборудования" FontSize="30"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Авторизация" Click="Avtorization_Click" 
                HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Frame Grid.Row="1" Name="MainFrame"/>
        <TextBlock Grid.Row="2" Text="ООО Техносервис" FontSize="14"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
